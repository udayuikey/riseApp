<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <TextView
        android:id="@+id/test_head_bug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/head_bug"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="0dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_below="@id/test_head_bug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/pseudo_layout_linear"
        android:layout_marginBottom="90dp"
        >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/test_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:background="@drawable/ic_cloud"
        android:textColor="#000000"
        android:id="@+id/test_but_submit"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="25sp"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
